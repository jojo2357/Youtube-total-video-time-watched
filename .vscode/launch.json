{
    // console and output capture are to (hopefully) make all the data stay on one line
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "console": "integratedTerminal", 
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\Code\\index.js"
        }
    ]
}